<div class="container align-content-center">
  <div class="row justify-content-center">
    <div class="card">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"><%= @cocktail.name %></h5>
      <% if @cocktail.doses.present? %>
       <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col">Unit</th>
              <th scope="col">Ingredient</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <th scope="row"><%= dose.description %></th>
                <td><%= dose.ingredient.name %></td>
                <td><%= link_to 'Remove', dose_path(dose), method: :delete, 'data-confirm': 'Are you sure?' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
        This cocktail has no ingredients yet. ğŸ™
        <% end %>
      </div>
      <div class="card-body">
      <%= link_to 'Add new ingredient', new_cocktail_dose_path(@cocktail), class: "btn-flat" %>
      </div>
    </div>
  </div>
</div>
