<div class="container my-5">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card">
        <%= link_to cocktail do %>
          <div class="cocktail-image">
            <%= cl_image_tag cocktail.photo.url, height: 400, width: 280, crop: :fill %>
          </div>
          <div class="cocktail-name">
            <h2><%= cocktail.name %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
