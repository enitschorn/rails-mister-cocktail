<div class="container my-5 show-container">
  <div class="cocktail-description">
    <div class="cocktail-description-name">
      <h1><%= @cocktail.name.upcase %></h1>
    </div>
    <div class="cocktail-description-ingredients">
      <div class="description-header-ingredients">Ingredients</div>
      <%= render 'partials/ingredients', cocktail: @cocktail %>
      <div class="create-btn">
        <%= link_to 'NEW INGREDIENT', new_cocktail_dose_path(@cocktail), class: "add-btn" %>
      </div>
    </div>
    <div class="cocktail-description-reviews">
      <div class="description-header-reviews">Reviews</div>
      <%= render 'partials/rating', cocktail: @cocktail %>
      <%= render 'partials/reviews', cocktail: @cocktail %>
      <div class="create-btn">
        <%= link_to 'NEW REVIEW', new_cocktail_review_path(@cocktail), class: "add-btn" %>
      </div>
    </div>
  </div>
  <div class="cocktail-description-image">
    <%= cl_image_tag @cocktail.photo, class: "img" %>
  </div>
</div>
